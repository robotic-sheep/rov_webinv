<% include partials/header.ejs %>
    <div class="container">
        <% if (items.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Manufacture</th>
                        <th scope="col">Model</th>
                        <th scope="col">Price</th>
                        <th scope="col">Count</th>
                        <th scope="col">Location</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach((item, index) => { %>
                        <tr>
                            <th scope="row"><%= item.id %></th>
                            <td><img src="/assets/img/<%= item.image %>" class="rounded-circle item-img" alt=""></td>
                            <td><%= item.item_name %></td>
                            <td><%= item.category %></td>
                            <td><%= item.manufacture %></td>
                            <td><%= item.model_number %></td>
                            <td><%= item.price %></td>
                            <td><%= item.count %></td>
                            <td><%= item.location %></td>
                            <td>
                                <a href="/edit/<%= item.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= item.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No items found. Go <a href="/add" >here</a> to add an item.</p>
        <% } %>
    </div>
</div>
</body>
</html>
