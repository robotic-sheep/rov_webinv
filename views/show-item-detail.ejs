<html>
<body>
<div id="light2" class="white_content" style="line-height: 5px; ">
    <br>
    <% if (item) { %>
	<p>Item Name: <%= item.item_name %> </p>
	<p>Category: <%= item.category %> </p>
	<p>Vendor: <%= item.manufacture %> </p>
	<p>Model: <%= item.model_number %> </p>
	<p>Price: <%= item.price %> </p>
	<p>Quantity: <%= item.count %> </p>
	<p>Location: <%= item.location %> </p>
	<br><br>
	<a href="/inventory/edit/<%= item.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
	<a href="/inventory/delete/<%= item.id %>" target="/inventory" rel="noopener" class="btn btn-sm btn-danger">Delete</a>
    <% } %>
</div>
</body>
</html>

