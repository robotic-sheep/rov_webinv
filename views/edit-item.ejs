<% include partials/header.ejs %>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (item) { %>
        <form class="add-item-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="item_name">Item Name</label>
                    <input type="text" class="form-control" name="item_name" id="item_name" value="<%= item.item_name %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="location">Additonal Details</label>
                    <input type="text" class="form-control" name="location" id="location" value="<%= item.location %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="item_details">Location</label>
                    <input type="text" class="form-control" name="item_details" id="item_details" value="<%= item.user_name %>" required disabled title="item_details cannot be edited.">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="number">Number</label>
                    <input type="number" class="form-control" name="number" id="number" placeholder="Number" value="<%= item.number %>" required>
                </div>
                <div class="form-group col-md-6">
                    <label for="position">Type</label>
                    <select id="position" name="position" class="form-control" required>
                        <option selected><%= item.position %></option>
                        <option>Material</option>
                        <option>Power Tool</option>
                        <option>Screws</option>
                        <option>Hand Tool</option>
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Item</button>
        </form>
    <% } else { %>
        <p class="text-center">Item Not Found. Go <a href="/add">here</a> to add items.</p>
    <% } %>
</div>
</div>
</body>
</html>
